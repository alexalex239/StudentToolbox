<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Converter">


    <EditText
        android:id="@+id/original_unit"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="Original Unit"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/value_entered"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="Value"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_unit"
        android:layout_width="187dp"
        android:layout_height="49dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="New Unit"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_back"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00DBFE"
        android:text="Calculator"
        android:textColor="#F8F8F9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="568dp"
        android:layout_marginEnd="160dp"
        android:background="#98CA01"
        android:text="Result"
        android:textColor="#FDFDFE"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ouput_text"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="100dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="60dp"
        android:text="Length Unit Converter"
        android:textColor="#050506"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>